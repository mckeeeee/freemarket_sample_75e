.pickupcontainer
  %section.pickupContainer
    %h2.head ピックアップカテゴリー
    .productBox
      .productHead
        = link_to "#" do
          %h3.title 新規投稿商品
      .productLists
        .productList
          - if @items.present?
            = render @items
          - else
            %h3 まだ商品はありません

  %section.pickupContainer
    %h2.head ピックアップブランド
    .productBox
      .productHead
        = link_to "#" do
          %h3.title アーカイバ
      .productLists
        .productList
          = link_to "/items/3" do
            %figure.productList--img
              =image_tag src="https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png"
            .productList--body
              %h3.name product3
              .details
                %ul
                  %li 30000円
                  %li
                    %i.fa.fa-star.likeIcon
                    0
                %p (税込)
