%h2 プロフィール情報入力

= form_for(@profile, url: profiles_path) do |f|
  = render "devise/shared/error_messages", resource: @profile

  .field
    = f.label :お名前（全角）
    %span.l-single-content__require 必須
    %br/
    = f.text_field :family_name, placeholder: "例）山田"
    = f.text_field :first_name, placeholder: "例）太郎"
    
  .field
    = f.label :お名前ひらがな（全角）
    %span.l-single-content__require 必須
    %br/
    = f.text_field :family_name_kana, placeholder: "例）やまだ"
    = f.text_field :first_name_kana, placeholder: "例）たろう"

  .field
    = f.label :生年月日
    %span.l-single-content__require 必須
    %br/
    = f.date_select :birthday, use_month_numbers: true, start_year: Time.now.year, end_year: 1930, prompt:"--"
  .field
    = f.label :自己紹介
    %span.l-single-content__optional 任意
    %br/
    = f.text_area :introduction

  .field
    = f.label :アバター
    %span.l-single-content__optional 任意
    %br/
    = f.file_field :avatar

  .actions
    = f.submit "次へ進む"

= render "devise/shared/links"