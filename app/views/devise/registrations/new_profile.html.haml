.session1-top
  %ul{class: "transitionーdiagram"}
    %li
      %span ①会員情報入力
    %li
      %span ➔ ②プロフィール情報入力
    %li
      ➔ ③送り先情報入力
.session2-container
  .form-title
    %h2 プロフィール情報入力
  .form-container
    = form_for(@profile, url: profiles_path) do |f|
      = render "devise/shared/error_messages", resource: @profile
      .form-container__box
        .form-container__box--name
          = f.label :お名前（全角）
          %span.form__require 必須
          %br/
          .float
            = f.text_field :family_name, placeholder: "例）山田"
            = f.text_field :first_name, placeholder: "例）太郎"
      .form-container__box
        .form-container__box--name-kana
          = f.label :お名前ひらがな（全角）
          %span.form__require 必須
          %br/
          .float
            = f.text_field :family_name_kana, placeholder: "例）やまだ"
            = f.text_field :first_name_kana, placeholder: "例）たろう"
      .form-container__box
        .form-container__box--birthday
          = f.label :生年月日
          %span.form__require 必須
          %br/
          = f.date_select :birthday, use_month_numbers: true, start_year: Time.now.year, end_year: 1930, prompt:"--"
      .form-container__box
        .form-container__box--introduction
          = f.label :自己紹介
          %span.form__any 任意
          %br/
          = f.text_area :introduction
      .form-container__box
        .form-container__box--actions
          = f.submit "次へ進む", class: "session-next-btn"
